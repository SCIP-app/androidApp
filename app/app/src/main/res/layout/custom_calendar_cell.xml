<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_cell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cell_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    android:weightSum="1">

    <RelativeLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_weight="0.37"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/sex"
        android:maxHeight="10dp"
        android:maxWidth="10dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_sex"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/prep"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_prep"
            android:visibility="invisible" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sfluid"
            android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="false"
        android:src="@drawable/ic_sfluid"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:layout_marginTop="3dp"
            android:visibility="invisible" />

        <ImageView
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:id="@+id/opk"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_opk"
            android:layout_weight="1.45"
            android:visibility="invisible" />

        <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/htemp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_htemp"
        android:layout_alignParentTop="true"
            android:visibility="invisible" />

    </RelativeLayout>


</LinearLayout>

