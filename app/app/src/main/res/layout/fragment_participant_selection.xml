<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="scip.app.ParticipantSelectionFragment"
    android:id="@+id/participant_fragment">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/participantIDSearch"
        android:layout_gravity="center_horizontal"
        style="@style/Base.Widget.AppCompat.EditText"
        android:text="Search by Participant ID"
        android:inputType="text"
        android:layout_marginLeft="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/participant_list"
        android:layout_marginStart="120dp" />

    <ListView
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:id="@+id/participant_list"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/participantIDSearch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear"
        android:id="@+id/clear_participant"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/participantIDSearch"
        android:layout_marginStart="79dp" />

</RelativeLayout>
